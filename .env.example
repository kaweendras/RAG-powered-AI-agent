# Environment Variables for RAG-powered AI Agent

# Server Configuration
PORT=4000
TEMPERATURE=0.2
SEED=42

# Vector Database Configuration
# Options: CHROMA, PINECONE, SUPABASE
VECTORDB_TYPE=SUPABASE

# ChromaDB Configuration
CHROMADB_URL=http://localhost:8000
CHROMADB_COLLECTION=handbook

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_INDEX_NAME=handbook-index

# Supabase Configuration
SUPERBASE_URL=your_supabase_url  # e.g. https://your-project-id.supabase.co
SUPERBASE_KEY=your_supabase_key
SUPERBASE_TABLE_NAME=documents

# Embedding Model Configuration
EMBEDDINGS_MODEL=nomic-embed-text:v1.5

# LLM Configuration
OLLAMA_API_URL=http://localhost:11434/api
OLLAMA_MODEL=llama3.2:latest
GOOGLEAI_MODEL_NAME=gemini-2.0-flash
GOOGLEAI_API_KEY=your_googleai_api_key
GOOGLEAI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/
